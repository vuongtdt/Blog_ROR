<%= form_with model: @post do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <%= form.submit "Save" %>
  <%= link_to 'Cancel', posts_path %>
<% end %>
